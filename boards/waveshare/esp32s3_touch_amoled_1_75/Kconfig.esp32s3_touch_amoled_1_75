config BOARD_ESP32S3_TOUCH_AMOLED_1_75
	select SOC_ESP32S3_R8
	select SOC_ESP32S3_PROCPU if BOARD_ESP32S3_TOUCH_AMOLED_1_75_ESP32S3_PROCPU
	select SOC_ESP32S3_APPCPU if BOARD_ESP32S3_TOUCH_AMOLED_1_75_ESP32S3_APPCPU

# Display configuration
config DISPLAY
	bool "Display support"
	default y if BOARD_ESP32S3_TOUCH_AMOLED_1_75
